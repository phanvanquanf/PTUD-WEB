@using aznews.Models;
@model IList<tblHocVien>;

<main id="main" class="main">
    <div class="pagetitle">
        <div class="container">
            <div class="header">
                <h2>Danh sách học viên</h2>
            </div>

            <div class="search-bar">
                <a asp-area="Admin" asp-controller="HocVien" asp-action="Create" class="add-menu-btn"
                    title="Tạo học viên">
                    <i class="fas fa-plus-circle"></i> Tạo học viên
                </a>
                <form method="get" action="/HVSearch">
                    <input type="text" name="input" placeholder="Tìm kiếm..." value="@ViewData["HVInput"]"
                         onkeydown="if(event.key === 'Enter'){this.submit();}" />
                         <button type="submit" class="search-btn" title="Tìm kiếm">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                </form>
            </div>

            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Số điện thoại</th>
                        <th>Họ và tên</th>
                        <th>Ngày sinh</th>
                        <th>Giới tính</th>
                        <th>Hoạt động</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(Model.IndexOf(item)+1)</td>
                            <td>@item.SoDienThoai</td>
                            <td>
                                <a asp-area="Admin" asp-controller="HocVien" asp-action="Details" asp-route-id="@item.IDHocVien"
                                    style="color: #007bff; text-decoration: none;">
                                    @item.HoTenHV
                                </a>
                            </td>
                            <td>@item.NgaySinh</td>
                            <td>@item.GioiTinh</td>
                            <td>
                                @if (item.TrangThai == 0)
                                {
                                    <span style="color: green;">Hoạt động</span>
                                }
                                else
                                {
                                    <span style="color: red;">Ngừng hoạt động</span>
                                }
                            </td>
                            <td class="action-btns">
                                <a asp-area="Admin" asp-controller="HocVien" asp-action="Edit" asp-route-id="@item.IDHocVien"
                                    class="btn btn-sua btn-sm" title="Chỉnh sửa">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a asp-controller="HocVien" asp-action="Delete" asp-route-id="@item.IDHocVien"
                                    class="btn btn-danger btn-sm" title="Xóa" onclick="return confirmDelete(event)">
                                    <i class="fas fa-trash-alt"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>

