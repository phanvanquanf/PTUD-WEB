@using aznews.Models;
@model IList<tblKhoaHoc>;

<main id="main" class="main">
    <div class="pagetitle">
        <div class="container">
            <div class="header">
                <h2>Danh sách chức năng</h2>
                <form method="get" action="/SearchKhoaHoc" class="search1-form">
                <div class="class-selector">
                    <label for="classSelect">Chọn lớp:</label>
                    <select id="classSelect" name="classSelect" onchange="this.form.submit()">
                        <option value="">---Select--</option>
                        <option value="10">Lớp 10</option>
                        <option value="11">Lớp 11</option>
                        <option value="12">Lớp 12</option>
                    </select>
                    <input1 type="hidden" name="input1" id="hiddenInput" value="@ViewData["SearchLop"]" />
                </div>
                </form>
            </div>

            <div class="search-bar">
                <form method="get" action="/SearchKhoaHoc" class="search-form">
                    <input type="text" name="input" placeholder="Tìm kiếm..." value="@ViewData["SearchInput"]"
                        onkeydown="if(event.key === 'Enter'){this.submit();}" />
                    <button type="submit" class="search-btn" title="Tìm kiếm">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                </form>
            </div>

            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tên khoá học</th>
                        <th>Học phí</th>
                        <th>Số bài giảng</th>
                        <th>Giáo viên</th>
                        <th>Hoạt động</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IDKhoaHoc</td>
                            <td>
                            <a asp-area="Admin" asp-controller="KhoaHoc" asp-action="Details" asp-route-id="@item.IDKhoaHoc"
                                    style="color: #007bff; text-decoration: none;">
                                    @item.TenKH
                                </a>
                            </td>
                            <td>@item.HocPhi</td>
                            <td>@item.SoBaiGiang</td>
                            <td>@item.GiaoVien?.HoTen</td>
                            <td>
                                @if (item.HoatDong == true)
                                {
                                    <span style="color: green;">Hoạt động</span>
                                }
                                else
                                {
                                    <span style="color: red;">Ngừng hoạt động</span>
                                }
                            </td>
                            <td class="action-btns">
                                <a asp-area="Admin" asp-controller="Chuong" asp-action="Index2"
                                    asp-route-id="@item.IDKhoaHoc" class="btn btn-success btn-sm" title="Tạo chương">
                                    <i class="fas fa-plus-circle"></i> Tạo bài giảng
                                </a>
                                <a asp-area="Admin" asp-controller="KhoaHoc" asp-action="Edit" asp-route-id="@item.IDKhoaHoc"
                                    class="btn btn-primary btn-sm" title="Chỉnh sửa">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a asp-controller="KhoaHoc" asp-action="Delete" asp-route-id="@item.IDKhoaHoc"
                                    class="btn btn-danger btn-sm" title="Xóa">
                                    <i class="fas fa-trash-alt"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>

