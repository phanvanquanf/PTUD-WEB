@using aznews.Models;
@model IList<tblMenu>;

<main id="main" class="main">
    <div class="pagetitle">
        <div class="container">
            <div class="header">
                <h2>Danh sách chức năng</h2>
                <div class="search-bar">
                    <form method="get" asp-controller="Menu" asp-action="Index">
                        <form method="get" action="/SearchMenu1">
                            <input type="text" name="input" placeholder="Tìm kiếm..." value="@ViewData["SearchInput"]"
                                onkeydown="if(event.key === 'Enter'){this.submit();}" />
                            <button type="submit" class="search-btn" title="Tìm kiếm">
                                <i class="fas fa-search"></i> Tìm kiếm
                            </button>
                        </form>
                    </form>
                </div>
            </div>

            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tên Menu</th>
                        <th>Cấp</th>
                        <th>Parent ID</th>
                        <th>Thứ tự</th>
                        <th>Trạng thái</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(Model.IndexOf(item) + 1)</td>
                            <td>
                                <a asp-area="Admin" asp-controller="Menu" asp-action="Details" asp-route-id="@item.MenuID"
                                    style="color: #007bff; text-decoration: none;">
                                    @item.MenuName
                                </a>
                            </td>
                            <td>@item.MenuID</td>
                            <td>@item.Levels</td>
                            <td>@item.ParentID</td>
                            <td>
                                @if (item.IsActive == true)
                                {
                                    <span style="color: green;">Hoạt động</span>
                                }
                                else
                                {
                                    <span style="color: red;">Ngừng hoạt động</span>
                                }
                            </td>
                            <td class="action-btns">
                                <a asp-area="Admin" asp-controller="Menu" asp-action="Edit" asp-route-id="@item.MenuID"
                                    class="btn btn-primary btn-sm" title="Chỉnh sửa">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a asp-controller="Menu" asp-action="Delete" asp-route-id="@item.MenuID"
                                    class="btn btn-danger btn-sm" title="Xóa">
                                    <i class="fas fa-trash-alt"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    .container {
        width: 90%;
        max-width: 1200px;
        background-color: #ffffff;
        padding: 20px;
        margin: 30px auto;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .header h2 {
        margin: 0;
        font-size: 24px;
        color: #343a40;
        font-weight: bold;
    }

    .add-menu-btn {
        padding: 10px 20px;
        background: linear-gradient(45deg, #36d1dc, #5b86e5);
        /* Gradient màu đẹp */
        color: #ffffff;
        text-decoration: none;
        border-radius: 5px;
        font-size: 16px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-weight: bold;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: all 0.3s;
    }

    .add-menu-btn:hover {
        background: linear-gradient(45deg, #5b86e5, #36d1dc);
        /* Đổi hướng gradient */
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        transform: scale(1.05);
        /* Tăng kích thước nhẹ */
    }

    .action-btns a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 8px 12px;
        margin: 0 5px;
        border-radius: 5px;
        color: #ffffff;
        font-size: 14px;
        text-decoration: none;
        transition: all 0.3s;
        gap: 5px;
    }

    .action-btns .btn-primary {
        background-color: #4caf50;
        /* Màu xanh lá nhạt */
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.2);
    }

    .action-btns .btn-primary:hover {
        background-color: #45a049;
        /* Đậm hơn khi hover */
    }

    .action-btns .btn-danger {
        background-color: #f44336;
        /* Màu đỏ nhạt */
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.2);
    }

    .action-btns .btn-danger:hover {
        background-color: #e53935;
        /* Đậm hơn khi hover */
    }


    .search-bar button.search-btn {
        background-color: #36d1dc;
        color: white;
        padding: 10px 20px;
        font-size: 14px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
    }

    .search-bar button.search-btn:hover {
        background-color: #5b86e5;
        transform: scale(1.05);
    }

    .search-bar button.search-btn i {
        margin-right: 5px;
    }

    .search-bar {
        display: flex;
        justify-content: space-between;
        margin: 20px;
        align-items: center;
    }

    .search-bar .add-menu-btn {
        display: inline-flex;
        align-items: center;
        padding: 10px 20px;
        background: linear-gradient(45deg, #36d1dc, #5b86e5);
        color: #ffffff;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        transition: 0.3s;
    }

    .search-bar .add-menu-btn:hover {
        background: linear-gradient(45deg, #5b86e5, #36d1dc);
        transform: scale(1.05);
    }

    .search-bar input[type="text"] {
        padding: 10px 15px;
        width: 300px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s;
        margin-left: 10px;
    }

    .search-bar input[type="text"]:focus {
        outline: none;
        border-color: #36d1dc;
        box-shadow: 0 0 5px rgba(54, 209, 220, 0.7);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #ffffff;
        overflow: hidden;
        border-radius: 10px;
    }

    th,
    td {
        padding: 15px;
        border: 1px solid #f1f1f1;
        text-align: center;
        font-size: 14px;
    }

    th {
        background-color: #f8f9fa;
        color: #495057;
        text-transform: uppercase;
        font-size: 14px;
        letter-spacing: 1px;
    }

    td {
        color: #6c757d;
    }

    tr:nth-child(even) {
        background-color: #f8f9fa;
    }

    tr:hover {
        background-color: #e9ecef;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 12px;
    }

    .pagetitle {
        margin-bottom: 20px;
    }
</style>
