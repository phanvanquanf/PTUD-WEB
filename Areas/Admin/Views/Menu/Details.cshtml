@using aznews.Models;
@model IList<tblMenu>;
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle text-center">
        <h2 class="text-primary">Thông tin menu</h2>
    </div>
    <div class="form-container">
        @foreach (var menu in Model)
        {
            <div class="form-row">
                <div class="form-group col-md-6 mb-4">
                    <label class="text-secondary">Menu ID</label>
                    <p class="form-control-static">@menu.MenuID</p>
                </div>

                <div class="form-group col-md-6 mb-4">
                    <label class="text-secondary">Menu name</label>
                    <p class="form-control-static">@menu.MenuName</p>
                </div>

                <div class="form-group col-md-6 mb-4">
                    <label class="text-secondary">Levels</label>
                    <p class="form-control-static">@menu.Levels</p>
                </div>

                <div class="form-group col-md-6 mb-4">
                    <label class="text-secondary">Parent ID</label>
                    <p class="form-control-static">@menu.ParentID</p>
                </div>

                <div class="form-group col-md-6 mb-4">
                    <label class="text-secondary">Link</label>
                    <p class="form-control-static">@menu.Link</p>
                </div>

                <div class="form-group col-md-6 mb-4">
                    <label class="text-secondary">Menu order</label>
                    <p class="form-control-static">@menu.MenuOrder</p>
                </div>

                <div class="form-group col-md-6 mb-4">
                    <label class="text-secondary">Position</label>
                    <p class="form-control-static">@menu.Position</p>
                </div>

                <div class="form-group col-md-6 mb-4">
                    <label class="text-secondary">Hoạt động</label>
                    <p class="form-control-static">@menu.IsActive</p>
                </div>
            </div>
        }
        <div class="form-actions">
            <a asp-controller="Menu" asp-action="Index" class="btn btn-warning p-2 d-flex align-items-center">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
        </div>
    </div>
</main>

<style>
    /* Các thành phần giữ nguyên như CSS đã viết */
    .form-container {
        padding: 30px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .form-row {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    .form-group {
        margin-bottom: 20px;
        width: 48%;
    }

    .form-group label {
        font-size: 1.1rem;
        font-weight: 600;
        color: #555;
        margin-bottom: 10px;
    }

    .form-control-static {
        font-size: 1.1rem;
        padding: 10px 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .btn {
        font-size: 1.1rem;
        padding: 12px 20px;
        border-radius: 5px;
        text-transform: uppercase;
        font-weight: bold;
        display: inline-flex;
        align-items: center;
    }

    .btn-warning {
        background-color: #ffc107;
        color: #333;
    }

    .btn-warning:hover {
        background-color: #e0a800;
    }

    .btn i {
        margin-right: 8px;
    }

    .form-actions {
        display: flex;
        justify-content: flex-start;
        margin-top: 20px;
    }
</style>
