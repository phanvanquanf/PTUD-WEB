@model aznews.Models.tblMenu

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle text-center mb-4">
        <h2 class="text-uppercase font-weight-bold text-danger">Xóa Menu</h2>
    </div>

    <div class="container shadow-sm p-5 my-5 bg-light rounded">
        <div class="alert alert-warning text-center mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> Bạn sắp xóa menu này. Hành động này không thể hoàn tác!
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="MenuID" class="font-weight-bold">ID Menu</label>
                    <input type="text" class="form-control" asp-for="MenuID" disabled />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="MenuName" class="font-weight-bold">Tên Menu</label>
                    <input type="text" class="form-control" asp-for="MenuName" disabled />
                </div>
            </div>
        </div>

        <!-- Begin Form -->
        <form asp-action="Delete" method="Post">
            <input type="hidden" asp-for="MenuID" />

            <div class="d-flex justify-content-between">
                <!-- Quay lại -->
                <a class="btn btn-warning btn-lg" href="javascript:history.back()">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>

                <!-- Nút Xóa -->
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash"></i> Xóa Menu
                </button>
            </div>
        </form>
        <!-- End Form -->
    </div>
</main>
