@using aznews.Models;
@model IList<tblGiaoVien>;
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle mb-4 text-center">
        <h2 class="text-uppercase font-weight-bold text-primary">Thông Tin Giáo Viên</h2>
    </div>

    <div class="container shadow-lg p-5 bg-white rounded">
        @foreach (var gv in Model)
        {
            <div class="text-center mb-5">
                <img src="~/admin/@gv.AnhGThieu" alt="Ảnh đại diện" class="rounded-circle img-thumbnail shadow"
                    style="width: 150px; height: 150px; object-fit: cover;">
                <h3 class="mt-3 text-primary">@gv.HoTen</h3>
                <p class="text-secondary">@gv.HocVi</p>
            </div>

            <div class="row gy-4">
                <div class="col-md-6">
                    <label class="form-label font-weight-bold">Họ và Tên:</label>
                    <p class="form-control-static">@gv.HoTen</p>
                </div>

                <div class="col-md-6">
                    <label class="form-label font-weight-bold">Nơi Công Tác:</label>
                    <p class="form-control-static">@gv.NoiCongTac</p>
                </div>

                <div class="col-md-6">
                    <label class="form-label font-weight-bold">Email:</label>
                    <p class="form-control-static">@gv.Email</p>
                </div>

                <div class="col-md-6">
                    <label class="form-label font-weight-bold">Facebook:</label>
                    <p class="form-control-static">@gv.Facebook</p>
                </div>

                <div class="col-md-6">
                    <label class="form-label font-weight-bold">Môn dạy:</label>
                    <p class="form-control-static">@gv.Mon?.Mon</p>
                </div>

                <div class="col-md-6">
                    <label class="form-label font-weight-bold">Trạng thái:</label>
                    <p class="form-control-static">
                        <span class="badge bg-@((gv.HoatDong == true) ? "success" : "secondary")">
                            @(gv.HoatDong == true ? "Đang hoạt động" : "Ngừng hoạt động")
                        </span>
                    </p>
                </div>

                <div class="col-12">
                    <label class="form-label font-weight-bold">Phong Cách Giảng Dạy:</label>
                    <p class="form-control-static">@Html.Raw(gv.PhongCach)</p>
                </div>

                <div class="col-12">
                    <label class="form-label font-weight-bold">Đôi Nét Về Giáo Viên:</label>
                    <p class="form-control-static">@Html.Raw(gv.DoiNet)</p>
                </div>

                <div class="col-12">
                    <label class="form-label font-weight-bold">Thành Tích:</label>
                    <p class="form-control-static">@Html.Raw(gv.ThanhTich)</p>
                </div>
            </div>
        }
        <div class="text-center mt-4">
            <a asp-controller="GiaoVien" asp-action="Index" class="btn btn-warning px-5 py-2">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
        </div>
    </div>
</main>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
    }

    .pagetitle h2 {
        color: #2c3e50;
        border-bottom: 3px solid #3498db;
        display: inline-block;
        padding-bottom: 5px;
    }

    .container {
        border-radius: 15px;
        background-color: #fff;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
    }

    .form-control-static {
        font-size: 15px;
        padding: 8px 12px;
        background-color: #f8f9fa;
        border-radius: 8px;
        border: 1px solid #dee2e6;
        color: #343a40;
    }

    .form-control-static img {
        max-width: 100%;
        height: auto;
        display: block;
        border-radius: 10px;
    }

    .badge-success {
        background-color: #28a745;
        color: white;
    }

    .badge-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-warning {
        background-color: #f39c12;
        color: white;
        font-weight: 600;
        border-radius: 5px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-warning:hover {
        background-color: #e67e22;
        transform: translateY(-2px);
    }
</style>
