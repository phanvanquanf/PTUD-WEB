@model aznews.Models.tblGiaoVien

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle text-center mb-4">
        <h2 class="text-uppercase font-weight-bold text-danger">Xóa Giáo Viên</h2>
    </div>

    <div class="container shadow p-5 my-5 bg-white rounded">
        <!-- Cảnh báo -->
        <div class="alert alert-warning text-center mb-5" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Chú ý:</strong> Bạn sắp xóa giáo viên này. Hành động này <strong>không thể hoàn tác!</strong>
        </div>

        <!-- Thông tin giáo viên -->
        <div class="row gy-4">
            <!-- ID Giáo viên -->
            <div class="col-md-6">
                <div class="form-group">
                    <label for="GVienID" class="form-label font-weight-bold text-secondary">ID Giáo viên</label>
                    <input type="text" class="form-control bg-light text-dark border-secondary" asp-for="GvienID"
                        disabled />
                </div>
            </div>

            <!-- Tên Giáo viên -->
            <div class="col-md-6">
                <div class="form-group">
                    <label for="TenGV" class="form-label font-weight-bold text-secondary">Tên Giáo Viên</label>
                    <input type="text" class="form-control bg-light text-dark border-secondary" asp-for="HoTen"
                        disabled />
                </div>
            </div>

            <!-- Học Vị -->
            <div class="col-md-6">
                <div class="form-group">
                    <label for="HocVi" class="form-label font-weight-bold text-secondary">Học Vị</label>
                    <input type="text" class="form-control bg-light text-dark border-secondary" asp-for="HocVi"
                        disabled />
                </div>
            </div>

            <!-- Nơi công tác -->
            <div class="col-md-6">
                <div class="form-group">
                    <label for="NoiCongTac" class="form-label font-weight-bold text-secondary">Nơi Công Tác</label>
                    <input type="text" class="form-control bg-light text-dark border-secondary" asp-for="NoiCongTac"
                        disabled />
                </div>
            </div>
        </div>

        <!-- Form Xóa -->
        <form asp-action="Delete" method="Post" class="mt-5">
            <input type="hidden" asp-for="GvienID" />

            <!-- Buttons -->
            <div class="text-center">
                <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg px-4 py-2 mr-3">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-danger btn-lg px-4 py-2">
                    <i class="bi bi-trash"></i> Xóa giáo viên
                </button>
            </div>
        </form>
    </div>
</main>

<style>
    /* Phong cách chung */
    body {
        background-color: #f9fafc;
        font-family: 'Arial', sans-serif;
    }

    .pagetitle h2 {
        color: #e74c3c;
    }

    .container {
        border-radius: 15px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: bold;
        font-size: 14px;
    }

    .form-control[disabled] {
        background-color: #f8f9fa;
        color: #495057;
        border: 1px solid #ced4da;
        cursor: not-allowed;
    }

    .btn-outline-secondary {
        border-radius: 10px;
        color: #6c757d;
        border: 2px solid #6c757d;
        transition: all 0.3s;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }

    .btn-danger {
        border-radius: 10px;
        font-weight: bold;
        background-color: #e74c3c;
        border: none;
        transition: all 0.3s;
    }

    .btn-danger:hover {
        background-color: #c0392b;
    }

    .alert-warning {
        font-size: 16px;
        border-radius: 10px;
        background-color: #fff3cd;
        border: 1px solid #ffeeba;
    }
</style>
