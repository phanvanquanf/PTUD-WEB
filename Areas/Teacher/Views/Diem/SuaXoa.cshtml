@using aznews.Models;
@model IList<tblDiem>;

<main id="main" class="main">
    <div class="pagetitle">
        <div class="container">
            <div class="header">
                <h2>Danh sách điểm học viên</h2>
            </div>

            <div class="search-bar">
                <form method="get" action="/SearchDiem1" class="search-form">
                    <input type="text" name="input" placeholder="Tìm kiếm..." value="@ViewData["SearchInput1"]" />
                    <button type="submit" class="search-btn" title="Tìm kiếm">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                </form>
            </div>

            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Học viên</th>
                        <th>Môn học</th>
                        <th>Điểm</th>
                        <th>Tên bài tập</th>
                        <th>Xếp loại</th>
                        <th>Giáo viên</th>
                        <th>Công cụ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(Model.IndexOf(item) + 1)</td>
                            <td>@item.HocVien?.HoTenHV</td>
                            <td>@item.Mon?.Mon</td>
                            <td>@item.Diem</td>
                            <td>@item.BaiTap?.TenBaiTap</td>
                            <td>
                                @if (item.XepLoai == 1)
                                {
                                    <span class="status-active">Đạt</span>
                                }
                                else
                                {
                                    <span class="status-inactive">Không đạt</span>
                                }
                            </td>
                            <td>@item.GiaoVien?.HoTen</td>
                            <td class="action-btns">
                                <a asp-area="Teacher" asp-controller="Diem" asp-action="Edit" asp-route-id="@item.IDDiem"
                                    class="btn btn-primary btn-sm" title="Chỉnh sửa">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a asp-controller="Diem" asp-action="Delete" asp-route-id="@item.IDDiem"
                                    class="btn btn-danger btn-sm" title="Xóa">
                                    <i class="fas fa-trash-alt"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    .container {
        width: 90%;
        max-width: 1600px;
        background-color: #ffffff;
        padding: 20px;
        margin: 30px auto;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .header h2 {
        margin: 0;
        font-size: 24px;
        color: #343a40;
        font-weight: bold;
    }

    .search-bar {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
        align-items: center;
    }

    .search-bar input[type="text"] {
        padding: 10px 15px;
        width: 300px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s;
        margin-left: 10px;
    }

    .search-bar button.search-btn {
        background-color: #36d1dc;
        color: white;
        padding: 10px 20px;
        font-size: 14px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s;
    }

    .search-bar button.search-btn:hover {
        background-color: #5b86e5;
        transform: scale(1.05);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #ffffff;
        overflow: hidden;
        border-radius: 10px;
    }

    th,
    td {
        padding: 15px;
        border: 1px solid #f1f1f1;
        text-align: center;
        font-size: 14px;
    }

    th {
        background-color: #f8f9fa;
        color: #495057;
        text-transform: uppercase;
        font-size: 14px;
        letter-spacing: 1px;
    }

    td {
        color: #6c757d;
    }

    tr:nth-child(even) {
        background-color: #f8f9fa;
    }

    tr:hover {
        background-color: #e9ecef;
    }

    .status-active {
        color: green;
        font-weight: bold;
    }

    .status-inactive {
        color: red;
        font-weight: bold;
    }

    .action-btns a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 8px 12px;
        margin: 0 5px;
        border-radius: 5px;
        color: #ffffff;
        font-size: 14px;
        text-decoration: none;
        transition: all 0.3s;
        gap: 5px;
    }

    .action-btns .btn-primary {
        background-color: #4caf50;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.2);
    }

    .action-btns .btn-primary:hover {
        background-color: #45a049;
    }

    .action-btns .btn-danger {
        background-color: #f44336;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.2);
    }

    .action-btns .btn-danger:hover {
        background-color: #e53935;
    }
</style>
