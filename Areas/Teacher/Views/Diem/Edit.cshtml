@using aznews.Utilities;
@model aznews.Models.tblDiem;

@{
    Layout = "~/Areas/Teacher/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle mb-4">
        <h2 class="text-uppercase font-weight-bold text-primary text-center">
            Sửa điểm học viên
        </h2>
    </div>
    <div class="container shadow-lg p-5 my-5 bg-white rounded">
        <form method="POST" asp-action="Edit" enctype="multipart/form-data">
            <div class="row g-4">
                <div class="col-md-6">
                    <label for="IDKhoaHoc" class="form-label">Khóa học</label>
                    <select asp-for="IDKhoaHoc" class="form-control custom-select"
                        asp-items="@(new SelectList(ViewBag.khList,"Value", "Text"))" id="IDKhoaHoc">
                    </select>
                </div>

                <div class="col-md-6">
                    <label for="HocVienID" class="form-label">Học viên</label>
                    <select asp-for="IDHocVien" class="form-control custom-select"
                        asp-items="@(new SelectList(ViewBag.HVList,"Value", "Text"))" id="IDHocVien">
                    </select>
                </div>

                <div class="col-md-6">
                    <label for="GVienID" class="form-label">Giảng viên</label>
                    <select asp-for="GVienID" class="form-control custom-select" id="GVienID">
                        <option value="">--- Select ---</option>
                    </select>
                    <span asp-validation-for="GVienID" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label for="IDBaiTap" class="form-label">Tên bài tập</label>
                    <select asp-for="IDBaiTap" class="form-control custom-select" id="IDBaiTap">
                        <option value="">--- Select ---</option>
                    </select>
                    <span asp-validation-for="IDBaiTap" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label for="IDMon" class="form-label">Môn học</label>
                    <select asp-for="IDMon" class="form-control custom-select" id="IDMon">
                        <option value="">--- Select ---</option>
                    </select>
                    <span asp-validation-for="IDMon" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label for="Diem" class="form-label">Điểm</label>
                    <input type="number" asp-for="Diem" class="form-control" placeholder="Nhập điểm" min="0" max="10"
                        step="0.1" />
                    <span asp-validation-for="Diem" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label for="XepLoai" class="form-label">Xếp loại</label>
                    <input type="text" id="XepLoai" class="form-control" placeholder="Xếp loại" readonly />
                </div>

                <div class="col-md-6">
                    <label for="MenuID" class="form-label">Menu name</label>
                    <select asp-for="MenuID" class="form-control custom-select"
                        asp-items="@(new SelectList(ViewBag.mnList, "Value", "Text"))" id="MenuID" disabled>
                        <option value="1">Điểm</option>
                    </select>
                    <input type="hidden" asp-for="MenuID" value="13" />
                </div>

                <!-- Nút Lưu -->
                <div class="col-12 text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg w-50">
                        <i class="bi bi-save"></i> Lưu Thay Đổi
                    </button>
                </div>
            </div>
        </form>
    </div>
</main>

<script>
    $(document).ready(function () {
        var gvList = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.gvList));
        var monList = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.monList));
        var BTList = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.BTList));

        function updateDropdown(dropdownId, list, valueKey, textKey) {
            var selectedCourseId = $('#IDKhoaHoc').val();
            var dropdown = $(dropdownId);
            dropdown.empty();
            dropdown.append('<option value="">--- Select ---</option>');

            if (selectedCourseId) {
                var filteredList = list.filter(function (item) {
                    return item.IDKhoaHoc == selectedCourseId;
                });

                $.each(filteredList, function (index, item) {
                    dropdown.append('<option value="' + item[valueKey] + '">' + item[textKey] + '</option>');
                });
            }
        }

        $('#IDKhoaHoc').change(function () {
            updateDropdown('#GVienID', gvList, 'GvienID', 'HoTen');
            updateDropdown('#IDBaiTap', BTList, 'IDBaiTap', 'TenBaiTap');
            updateDropdown('#IDMon', monList, 'IDMon', 'Mon');
        });

        $('#Diem').on('input', function () {
            var diem = parseFloat($(this).val());
            var xepLoai = "";

            if (!isNaN(diem)) {
                xepLoai = diem >= 5 ? "Đạt" : "Không đạt";
            }

            $('#XepLoai').val(xepLoai);
        });
    });
</script>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8fafc;
    }

    .pagetitle h2 {
        color: #4a69bd;
    }

    .container {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .form-control,
    .form-select,
    .custom-select {
        border-radius: 8px;
        font-size: 16px;
        padding: 12px;
        box-shadow: inset 0 1px 5px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: bold;
        color: #34495e;
    }

    .btn-primary {
        background-color: #4a69bd;
        border: none;
        color: white;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-primary:hover {
        background-color: #1e3799;
        transform: translateY(-2px);
    }

    .text-danger {
        font-size: 14px;
    }

    .form-control:focus,
    .form-select:focus {
        box-shadow: 0 0 5px rgba(74, 105, 189, 0.7);
        border-color: #4a69bd;
    }

    a {
        text-decoration: none !important;
    }
</style>