@model aznews.Models.tblDiem

<main id="main" class="main">
    <div class="pagetitle text-center mb-4">
        <h2 class="text-uppercase font-weight-bold text-danger">Xóa Điểm Học Viên</h2>
    </div>

    <div class="container shadow p-5 my-5 bg-white rounded">
        <div class="alert alert-warning text-center mb-5" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Chú ý:</strong> Bạn sắp xóa điểm này. Hành động này <strong>không thể hoàn tác!</strong>
        </div>

        <div class="row gy-4">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="HocVien" class="form-label font-weight-bold text-secondary">Học viên</label>
                    <input type="text" class="form-control bg-light text-dark border-secondary"
                        value="@Model.HocVien?.HoTenHV" readonly />
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label for="KhoaHoc" class="form-label font-weight-bold text-secondary">Khóa học</label>
                    <input type="text" class="form-control bg-light text-dark border-secondary"
                        value="@Model.KhoaHoc?.TenKH" readonly />
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label for="MonHoc" class="form-label font-weight-bold text-secondary">Môn học</label>
                    <input type="text" class="form-control bg-light text-dark border-secondary"
                        value="@Model.Mon?.Mon" readonly />
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label for="BaiTap" class="form-label font-weight-bold text-secondary">Bài tập</label>
                    <input type="text" class="form-control bg-light text-dark border-secondary"
                        value="@Model.BaiTap?.TenBaiTap" readonly />
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label for="Diem" class="form-label font-weight-bold text-secondary">Điểm</label>
                    <input type="text" class="form-control bg-light text-dark border-secondary"
                        value="@Model.Diem" readonly />
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label for="XepLoai" class="form-label font-weight-bold text-secondary">Xếp loại</label>
                    <input type="text" class="form-control bg-light text-dark border-secondary"
                        value="@(Model.Diem >= 5 ? "Đạt" : "Không đạt")" readonly />
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="Post" class="mt-5">
            <input type="hidden" asp-for="IDDiem" />
            <div class="text-center">
                <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg px-4 py-2 mr-3">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-danger btn-lg px-4 py-2">
                    <i class="bi bi-trash"></i> Xóa điểm
                </button>
            </div>
        </form>
    </div>
</main>

<style>
    body {
        background-color: #f9fafc;
        font-family: 'Arial', sans-serif;
    }

    .pagetitle h2 {
        color: #e74c3c;
    }

    .container {
        border-radius: 15px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: bold;
        font-size: 14px;
    }

    .form-control[disabled], .form-control[readonly] {
        background-color: #f8f9fa;
        color: #495057;
        border: 1px solid #ced4da;
        cursor: not-allowed;
    }

    .btn-outline-secondary {
        border-radius: 10px;
        color: #6c757d;
        border: 2px solid #6c757d;
        transition: all 0.3s;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }

    .btn-danger {
        border-radius: 10px;
        font-weight: bold;
        background-color: #e74c3c;
        border: none;
        transition: all 0.3s;
    }

    .btn-danger:hover {
        background-color: #c0392b;
    }

    .alert-warning {
        font-size: 16px;
        border-radius: 10px;
        background-color: #fff3cd;
        border: 1px solid #ffeeba;
    }

    a {
        text-decoration: none;
    }
</style>
