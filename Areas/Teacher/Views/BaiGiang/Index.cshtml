@using aznews.Models;
@model IList<tblBaiGiang>;

<main id="main" class="main">
    <div class="pagetitle">
        <div class="container">
            <div class="header">
                <h2>Danh sách bài giảng</h2>
            <form method="get" action="/SearchBaiGiang" class="search1-form">
                <div class="class-selector">
                    <label for="classSelect">Chọn lớp:</label>
                    <select id="classSelect" name="classSelect" onchange="this.form.submit()">
                        <option value="">---Select--</option>
                        <option value="10">Lớp 10</option>
                        <option value="11">Lớp 11</option>
                        <option value="12">Lớp 12</option>
                    </select>
                    <input1 type="hidden" name="input1" id="hiddenInput" value="@ViewData["SearchLop"]" />
                </div>
            </form>
            </div>

            <div class="search-bar">
                <a asp-area="Teacher" asp-controller="BaiGiang" asp-action="Create" class="add-menu-btn"
                    title="Tạo bài giảng">
                    <i class="fas fa-plus-circle"></i> Tạo bài giảng
                </a>
                <form method="get" action="/SearchBaiGiang1" class="search-form">
                    <input type="text" name="input" placeholder="Tìm kiếm..." value="@ViewData["SearchInput"]"
                        onkeydown="if(event.key === 'Enter'){this.submit();}" />
                    <button type="submit" class="search-btn" title="Tìm kiếm">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                </form>
            </div>

            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tên bài học</th>
                        <th>Giảng viên</th>
                        <th>Khoá học</th>
                        <th>Thời lượng</th>
                        <th>Trạng thái</th>
                        <th>Công cụ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                            <tr>
                                <td class="action-btns">
                                    <a asp-controller="BaiGiang" asp-action="Details" asp-route-id="@item.IDKhoaHoc"
                                    class="btn btn-info btn-sm" title="Xem thông tin">
                                    <i class="fas fa-info-circle"></i> Xem
                                    </a>
                                    <a asp-area="Teacher" asp-controller="BaiGiang" asp-action="Edit" asp-route-id="@item.IDBaiGiang"
                                        class="btn btn-primary btn-sm" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a asp-controller="BaiGiang" asp-action="Delete" asp-route-id="@item.IDBaiGiang"
                                        class="btn btn-danger btn-sm" title="Xóa">
                                        <i class="fas fa-trash-alt"></i> Xóa
                                    </a>
                                </td>
                                <td>@(Model.IndexOf(item) + 1)</td>
                                <td>
                                    <a asp-area="Teacher" asp-controller="BaiGiang" asp-action="Details"
                                        asp-route-id="@item.IDBaiGiang" class="text-link">
                                    @item.TenBaiHoc
                                    </a>
                                </td>
                                <td>@item.GiaoVien?.HoTen</td>
                                <td>@item.KhoaHoc?.TenKH</td>
                                <td>@item.ThoiLuong</td>
                                <td>
                                @if (item.HoatDong == true)
                                {
                                    <span class="status-active">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="status-inactive">Ngừng hoạt động</span>
                                }
                                </td>   
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>
<script>
    // Function to update the hidden input value based on selected option
    function updateHiddenInput() {
        var selectedClass = document.getElementById("classSelect").value;
        document.getElementById("hiddenInput").value = selectedClass;
    }
</script>
