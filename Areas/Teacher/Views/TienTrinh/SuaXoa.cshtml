@using aznews.Models
@model IList<tblTienTrinh>;

<main id="main" class="main">
    <div class="pagetitle">
        <div class="container">
            <div class="header">
                <h2>Danh sách tiến trình</h2>
            </div>

            <div class="search-bar">
                <form method="get" action="/SearchTienTrinh1" class="search-form">
                    <input type="text" name="input" placeholder="Tìm kiếm..." value="@ViewData["SearchInput"]" />
                    <button type="submit" class="search-btn" title="Tìm kiếm">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                </form>
            </div>

            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Học viên</th>
                        <th>Khóa học</th>
                        <th>Bài giảng</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày hoàn thành</th>
                        <th>Trạng thái</th>
                        <th>Công cụ</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(Model.IndexOf(item) + 1)</td>
                                <td>@item.HocVien?.HoTenHV</td>
                                <td>@item.KhoaHoc?.TenKH</td>
                                <td>@item.BaiGiang?.TenBaiHoc</td>
                                <td>@item.NgayBatDau.ToString("dd/MM/yyyy")</td>
                                <td>@item.NgayHoanThanh.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (item.TrangThai == 1)
                                    {
                                        <span class="status-active">Hoàn thành</span>
                                    }
                                    else
                                    {
                                        <span class="status-inactive">Chưa hoàn thành</span>
                                    }
                                </td>
                                <td class="action-btns">
                                    <a asp-area="Teacher" asp-controller="TienTrinh" asp-action="Edit"
                                        asp-route-id="@item.IDTienTrinh" class="btn btn-primary btn-sm" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a asp-controller="TienTrinh" asp-action="Delete" asp-route-id="@item.IDTienTrinh"
                                        class="btn btn-danger btn-sm" title="Xóa">
                                        <i class="fas fa-trash-alt"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center">Không có dữ liệu hiển thị</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    .container {
        width: 100%;
        max-width: 2000px;
        background-color: #ffffff;
        padding: 20px;
        margin: 30px auto;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .header .search-form {
        margin-top: 20px;
        width: 100%;
    }

    .header .search1-form {
        width: 26%;
    }

    .header h2 {
        margin: 0;
        font-size: 24px;
        color: #343a40;
        font-weight: bold;
    }

    .add-menu-btn {
        padding: 10px 20px;
        background: linear-gradient(45deg, #36d1dc, #5b86e5);
        color: #ffffff;
        text-decoration: none;
        border-radius: 5px;
        font-size: 16px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-weight: bold;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: all 0.3s;
    }

    .add-menu-btn:hover {
        background: linear-gradient(45deg, #5b86e5, #36d1dc);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        transform: scale(1.05);
    }

    .class-selector {
        margin: 20px;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .class-selector label {
        font-size: 16px;
        color: #495057;
        font-weight: 500;
    }

    .class-selector select {
        padding: 12px 20px;
        font-size: 14px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f8f9fa;
        color: #495057;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        cursor: pointer;
        transition: all 0.3s ease;
        width: 200px;
    }

    .class-selector select:focus {
        outline: none;
        border-color: #36d1dc;
        box-shadow: 0 0 10px rgba(54, 209, 220, 0.7);
    }

    .class-selector select option {
        padding: 10px;
        background-color: #ffffff;
        color: #495057;
    }

    .class-selector select:hover {
        border-color: #36d1dc;
        transform: scale(1.02);
    }

    .class-selector select option:hover {
        background-color: #f1f1f1;
    }


    .action-btns a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 8px 12px;
        margin: 0 5px;
        border-radius: 5px;
        color: #ffffff;
        font-size: 14px;
        text-decoration: none;
        transition: all 0.3s;
        gap: 5px;
    }

    .action-btns .btn-primary {
        background-color: #4caf50;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.2);
    }

    .action-btns .btn-primary:hover {
        background-color: #45a049;
    }

    .action-btns .btn-danger {
        background-color: #f44336;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.2);
    }

    .action-btns .btn-danger:hover {
        background-color: #e53935;
    }

    .search-bar {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
        align-items: center;
    }

    .search-bar input[type="text"] {
        padding: 10px 15px;
        width: 300px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s;
        margin-left: 10px;
    }

    .search-bar input[type="text"]:focus {
        outline: none;
        border-color: #36d1dc;
        box-shadow: 0 0 5px rgba(54, 209, 220, 0.7);
    }

    .search-bar button.search-btn {
        background-color: #36d1dc;
        color: white;
        padding: 10px 20px;
        font-size: 14px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s;
    }

    .search-bar button.search-btn:hover {
        background-color: #5b86e5;
        transform: scale(1.05);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #ffffff;
        overflow: hidden;
        border-radius: 10px;
    }

    th,
    td {
        padding: 15px;
        border: 1px solid #f1f1f1;
        text-align: center;
        font-size: 14px;
    }

    th {
        background-color: #f8f9fa;
        color: #495057;
        text-transform: uppercase;
        font-size: 14px;
        letter-spacing: 1px;
    }

    td {
        color: #6c757d;
    }

    tr:nth-child(even) {
        background-color: #f8f9fa;
    }

    tr:hover {
        background-color: #e9ecef;
    }

    .status-active {
        color: green;
        font-weight: bold;
    }

    .status-inactive {
        color: red;
        font-weight: bold;
    }

    .text-link {
        color: #007bff;
        text-decoration: none;
    }

    .text-link:hover {
        text-decoration: underline;
    }
</style>
