@using aznews.Utilities;
@model aznews.Models.tblBaiTap;

@{
    Layout = "~/Areas/Teacher/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle mb-4">
        <h2 class="text-uppercase font-weight-bold text-primary text-center">
            Thêm bài tập
        </h2>
    </div>
    <div class="container shadow-lg p-5 my-5 bg-white rounded">
        <form method="POST" asp-action="Create" enctype="multipart/form-data">
            <div class="row g-4">
                <div class="col-md-6">
                    <label for="TenBaiTap" class="form-label">Tên bài tập</label>
                    <input type="text" class="form-control" asp-for="TenBaiTap" placeholder="Nhập tên bài tập..." />
                    <span asp-validation-for="TenBaiTap" class="text-danger small"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="TenKH" class="form-label">Tên khóa học</label>
                    <select asp-for="IDKhoaHoc" class="form-control custom-select"
                        asp-items="@(new SelectList(ViewBag.khList, "Value", "Text"))" id="IDKhoaHoc">
                    </select>
                    <span asp-validation-for="IDKhoaHoc" class="text-danger small"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="IDChuong" class="form-label">Tên chương</label>
                    <select asp-for="IDChuong" class="form-control custom-select" id="IDChuong">
                        <option value="">--- Select ---</option>
                    </select>
                    <span asp-validation-for="IDChuong" class="text-danger small"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="GVienID" class="form-label">Tác giả</label>
                    <select asp-for="GVienID" class="form-control custom-select" id="GVienID">
                        <option value="">--- Select ---</option>
                    </select>
                    <span asp-validation-for="GVienID" class="text-danger small"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="IDBaiGiang" class="form-label">Tên bài giảng</label>
                    <select asp-for="IDBaiGiang" class="form-control custom-select" id="IDBaiGiang">
                        <option value="">--- Select ---</option>
                    </select>
                    <span asp-validation-for="IDBaiGiang" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label for="TrangThai" class="form-label">Trạng thái</label>
                    <select asp-for="TrangThai" class="form-control">
                        <option value="True">Đang hoạt động</option>
                        <option value="False">Ngừng hoạt động</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label for="HoatDong" class="form-label">Hoạt động</label>
                    <select asp-for="HoatDong" class="form-control">
                        <option value="0">Đã nạp</option>
                        <option value="1">Chưa nạp</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label for="Link" class="form-label">Link bài tập</label>
                    <input type="url" asp-for="Link" class="form-control" placeholder="Nhập liên kết..." />
                    <span asp-validation-for="Link" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label for="MenuID" class="form-label">Menu name</label>
                    <select asp-for="MenuID" class="form-control custom-select"
                        asp-items="@(new SelectList(ViewBag.mnList, "Value", "Text"))" id="MenuID" disabled>
                        <option value="1">Bài tập</option>
                    </select>
                    <input type="hidden" asp-for="MenuID" value="11" />
                </div>

                <!-- Nút Lưu -->
                <div class="col-12 text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg w-50">
                        <i class="bi bi-save"></i> Lưu Thay Đổi
                    </button>
                </div>
            </div>
        </form>
    </div>
</main>
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8fafc;
    }

    .pagetitle h2 {
        color: #4a69bd;
    }

    .container {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .form-control,
    .form-select,
    .custom-select {
        border-radius: 8px;
        font-size: 16px;
        padding: 12px;
        box-shadow: inset 0 1px 5px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: bold;
        color: #34495e;
    }

    .btn-primary {
        background-color: #4a69bd;
        border: none;
        color: white;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-primary:hover {
        background-color: #1e3799;
        transform: translateY(-2px);
    }

    .text-danger {
        font-size: 14px;
    }

    .form-control:focus,
    .form-select:focus {
        box-shadow: 0 0 5px rgba(74, 105, 189, 0.7);
        border-color: #4a69bd;
    }

    a {
        text-decoration: none !important;
    }
</style>
<script>
    $(document).ready(function () {
        var gvWithCourseList = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.gvWithCourseList));
        var chuongList = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.chuongList));
        var BGList = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.BGList));

        function updateDropdown(dropdownId, list, valueKey, textKey) {
            var selectedCourseId = $('#IDKhoaHoc').val();
            var dropdown = $(dropdownId);
            dropdown.empty();
            dropdown.append('<option value="">--- Select ---</option>');

            if (selectedCourseId) {
                var filteredList = list.filter(function (item) {
                    return item.IDKhoaHoc == selectedCourseId;
                });

                $.each(filteredList, function (index, item) {
                    dropdown.append('<option value="' + item[valueKey] + '">' + item[textKey] + '</option>');
                });
            }
        }

        $('#IDKhoaHoc').change(function () {
            updateDropdown('#GVienID', gvWithCourseList, 'GvienID', 'HoTen');
            updateDropdown('#IDChuong', chuongList, 'IDChuong', 'TenChuong');
            updateDropdown('#IDBaiGiang', BGList, 'IDBaiGiang', 'TenBaiHoc');
        });
    });
</script>