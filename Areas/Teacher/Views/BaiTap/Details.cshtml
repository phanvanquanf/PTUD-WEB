@using aznews.Models;
@model IList<tblBaiTap>;

@{
    Layout = "~/Areas/Teacher/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    @foreach (var bt in Model)
    {
        <div class="pagetitle mb-4">
            <h2 class="text-uppercase font-weight-bold text-primary text-center">
                @bt.TenBaiTap
            </h2>
        </div>
        <div class="container shadow p-5 my-5 bt-light rounded">

            <div class="row g-4">
                <div class="col-md-6 mb-3">
                    <label class="form-label font-weight-bold">Tên khóa học:</label>
                    <p class="form-control-plaintext">@bt.KhoaHoc?.TenKH</p>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label font-weight-bold">Bài giảng:</label>
                    <p class="form-control-plaintext">@bt.BaiGiang?.TenBaiHoc</p>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label font-weight-bold">Tác giả:</label>
                    <p class="form-control-plaintext">@bt.GiaoVien?.HoTen</p>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label font-weight-bold">Tên chương:</label>
                    <p class="form-control-plaintext">@bt.Chuong?.TenChuong</p>
                </div>

                <div class="video-player">
                    <label class="form-label font-weight-bold">Xem trước Bài tập:</label>
                    <div id="pdfContainer">
                        <iframe id="pdfIframe" src="@bt.Link" width="100%" height="600px" allowfullscreen></iframe>
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="form-label font-weight-bold">Hoạt đông:</label>
                    @if (@bt.HoatDong == 0)
                    {
                        <div class="form-control-plaintext">Đã nạp</div>
                    }
                    else
                    {
                        <div class="form-control-plaintext">Chưa nạp</div>
                    }
                </div>

                <div class="col-md-6">
                    <label class="form-label font-weight-bold">Trạng thái:</label>
                    <p class="form-control-plaintext">
                        @bt.TrangThai
                    </p>
                </div>

                <div class="col-12 text-center mt-4">
                    <a href="~/Teacher/BaiTap" class="btn btn-outline-primary btn-lg w-50">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    }
</main>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7fa;
    }

    .pagetitle h2 {
        color: #2c3e50;
    }

    .container {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: bold;
        color: #2c3e50;
    }

    .form-control-plaintext {
        font-size: 14px;
        color: #34495e;
        background: #ecf0f1;
        padding: 10px;
        border-radius: 8px;
    }

    .btn-outline-primary {
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

    .btn-outline-primary:hover {
        background-color: #3498db;
        color: white;
    }

    a {
        text-decoration: none !important;
    }
</style>
