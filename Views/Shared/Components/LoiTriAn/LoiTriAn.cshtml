@using aznews.Models;
@model IList<viewLoiTriAn>;

<!--  Recent Articles start -->
<div class="recent-articles">
    <div class="container">
        <div class="recent-wrapper">
            <!-- section Tittle -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-tittle mb-30">
                        <h3>Lời tri ân đến các thầy cô</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="recent-active dot-style d-flex dot-style">
                        @{
                            var loicamon = Model.Take(4).ToList();
                            foreach (var lco in loicamon)
                            {
                                <div class="single-recent mb-100">
                                    <div class="what-img">
                                        <img src="@lco.Images" alt="" width="370px" height="344px">
                                    </div>
                                    <div class="what-cap">
                                        <span class="color1">@lco.Title</span>
                                        <h4><a href="#">@lco.Contents</a></h4>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Recent Articles End -->