@model IList<aznews.Models.viewBaiTap>


<div class="BaiTap">
    @foreach (var tenbai in Model)
    {
        <div class="header">
            @tenbai.TenBaiTap
        </div>

        <div id="pdfContainer">
            <iframe id="pdfIframe" src="@tenbai.Link" width="100%" height="600px" allowfullscreen></iframe>
        </div>
    }
</div>

<form id="submit-form" action="#" method="post" enctype="multipart/form-data" onsubmit="return handleSubmit(event)">
    <div class="form-container">
        <h2>Nộp Bài Tập</h2>

        <label for="message">Nhập Nội Dung:</label>
        <textarea id="message" name="message" rows="6" placeholder="Nhập nội dung của bạn ở đây..."></textarea>

        <label for="file-upload" class="file-label">Tải Tệp Đính Kèm:</label>
        <input type="file" id="file-upload" name="file-upload" class="file-input">

        <button type="submit" class="submit-btn">Nộp Bài Tập</button>

        <div id="success-message" class="success-message">
            Nộp bài tập thành công!
        </div>
    </div>
</form>

<script>
    function handleSubmit(event) {
        event.preventDefault();

        document.getElementById("success-message").style.display = "block";

        setTimeout(function () {
            document.getElementById("success-message").style.display = "none";
        }, 3000);
    }
</script>

<style>
