@using aznews.Models;
@model IList<viewHocVien>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Style cơ bản */
    .profile-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px;
        border-radius: 10px;
        background-color: #f7f7f7;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        font-family: 'Arial', sans-serif;
    }

    h2 {
        text-align: center;
        font-size: 32px;
        font-weight: bold;
        margin-bottom: 30px;
        color: #333;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
        font-size: 14px;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .save-message {
        margin-top: 15px;
        font-size: 16px;
        color: green;
        font-weight: bold;
        display: none;
    }
</style>

<div class="profile-container">
    <h2>Thông tin Cá nhân</h2>
    <form id="profileForm">
        @if (Model.Any())
        {
            var hocVien = Model.First();
            <input type="hidden" id="studentId" value="@hocVien.IDHocVien" />

            <div class="form-group">
                <label for="studentName">Họ và Tên *</label>
                <input type="text" class="form-control" id="studentName" value="@hocVien.HoTenHV"
                    placeholder="Nhập họ và tên" />
            </div>

            <div class="form-group">
                <label>Ngày Sinh *</label>
                <input type="date" class="form-control" id="birthDate" value="@hocVien.NgaySinh.ToString("yyyy-MM-dd")" />
            </div>

            <div class="form-group">
                <label for="gender">Giới Tính *</label>
                <select class="form-control" id="gender">
                    <option selected="@hocVien.GioiTinh == 'Nam'">Nam</option>
                    <option selected="@hocVien.GioiTinh == 'Nữ'">Nữ</option>
                    <option selected="@hocVien.GioiTinh == 'Khác'">Khác</option>
                </select>
            </div>

            <div class="form-group">
                <label for="phone">Số điện thoại *</label>
                <input type="tel" class="form-control" id="phone" value="@hocVien.SoDienThoai"
                    placeholder="Nhập số điện thoại" />
            </div>

            <div class="form-group">
                <label for="email">Email *</label>
                <input type="email" class="form-control" id="email" value="@hocVien.Email" placeholder="Nhập email" />
            </div>

            <div class="form-group">
                <label for="address">Địa chỉ *</label>
                <input type="text" class="form-control" id="address" value="@hocVien.DiaChi" placeholder="Nhập địa chỉ" />
            </div>

            <div class="form-group">
                <label>Ngày đăng ký *</label>
                <input type="date" class="form-control" id="registrationDate"
                    value="@hocVien.NgayDangKy.ToString("yyyy-MM-dd")" />
            </div>

            <div class="form-group">
                <label for="status">Trạng thái *</label>
                <select class="form-control" id="status">
                    <option selected="@hocVien.TrangThai == 'Hoạt động'">Hoạt động</option>
                    <option selected="@hocVien.TrangThai == 'Không hoạt động'">Không hoạt động</option>
                </select>
            </div>

            <div class="form-group">
                <label for="menuId">Menu ID *</label>
                <input type="text" class="form-control" id="menuId" value="@hocVien.MenuID" placeholder="Nhập Menu ID" />
            </div>

            <div class="form-group">
                <label for="menuName">Tên Menu *</label>
                <input type="text" class="form-control" id="menuName" value="@hocVien.MenuName"
                    placeholder="Nhập Tên Menu" />
            </div>

            <div class="form-group">
                <label for="role">Lớp *</label>
                <select class="form-control" id="role">
                    <option selected="@hocVien.Lop == 10">Lớp 10</option>
                    <option selected="@hocVien.Lop == 11">Lớp 11</option>
                    <option selected="@hocVien.Lop == 12">Lớp 12</option>
                </select>
            </div>

            <div class="form-group">
                <label for="avatar">Ảnh đại diện *</label>
                <input type="text" class="form-control" id="avatar" value="@hocVien.AnhDaiDien"
                    placeholder="Nhập link ảnh đại diện" />
            </div>

            <div class="form-actions">
                <a asp-controller="Home" asp-action="EditHV" asp-route-id="@hocVien.IDHocVien"
                    asp-route-slug="@hocVien.HoTenHV">
                    <div class="col-12 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg w-100 py-2">Cập nhật thông tin</button>
                    </div>
                </a>
            </div>



        }
    </form>
</div>
